// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String          @id
  email       String
  password    String
  registered  DateTime @default(now())
  contributed Contribution[]
  deletePermission Boolean
  createPermission Boolean
}

model Contribution {
  id      String  @id @default(cuid())
  userId  String?
  docId   String
  author  User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  doc     Doc    @relation(fields: [docId], references: [id], onDelete: Cascade)
  before  String @db.Text  
  after   String @db.Text  
  date    DateTime @default(now())
  ip      String
  note    String @default("")
}


model Subject {
    id String @id
    doc Doc[]
}

model Doc {
  id            String         @id
  title         String
  content       String         @db.Text
  subjectId     String
  subject       Subject        @relation(fields:[subjectId], references: [id])
  contributions Contribution[] 
  tags Tag[]
  lastUpdated   DateTime       @updatedAt
  created   DateTime           @default(now())
  @@unique([id,title])
}

model Tag {
    label   String
    id String @id @default(cuid())
    doc Doc[]
}
//the value in the relation fields or references fields should not be inserted, since it is a control element controlled by relations defined in prisma